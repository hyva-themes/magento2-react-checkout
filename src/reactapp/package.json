{
  "name": "hyva-checkout",
  "version": "0.1.0",
  "description": "A headless React Checkout for Magento 2",
  "repository": "local",
  "keywords": [
    "react",
    "checkout",
    "magento"
  ],
  "author": "Willem Wigman",
  "license": "MIT",
  "private": true,
  "proxy": "https://demo.hyva.io",
  "dependencies": {
    "@heroicons/react": "^1.0.1",
    "formik": "^2.2.6",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "preact": "^10.5.4",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-app-polyfill": "^1.0.6",
    "react-dom": "^17.0.1",
    "react-scripts": "^3.4.0",
    "yup": "^0.32.8"
  },
  "scripts": {
    "preinstall": "node scripts/configurePaymentMethods",
    "start": "npm run app:start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "precommit": "lint-staged",
    "app:start": "react-app-rewired start",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "prestart": "cd ../view/frontend/web/css/tailwind/ && npm run build-dev",
    "prebuild": "cd ../view/frontend/web/css/tailwind/ && npm run build-prod",
    "move-i18n-to-static-dir": "cp -R public/i18n ../view/frontend/web/js/"
  },
  "lint-staged": {
    "src/*.{js,jsx,json,scss,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "paymentMethodsRepo": "Add your payment methods here"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "ie 11",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "ie 11",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/node-logger": "^6.1.11",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.1.11",
    "@tailwindcss/custom-forms": "^0.2.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "react-app-rewired": "^2.1.5",
    "react-dev-utils": "^10.2.0",
    "tailwindcss": "^1.9.6"
  }
}
