{
  "name": "hyva-checkout",
  "version": "0.1.0",
  "description": "A headless React Checkout for Magento 2",
  "repository": "local",
  "keywords": [
    "react",
    "checkout",
    "magento"
  ],
  "author": "Willem Wigman",
  "license": "MIT",
  "private": true,
  "proxy": "https://demo.hyva.io",
  "dependencies": {
    "@heroicons/react": "^1.0.1",
    "formik": "^2.2.6",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "npm-run-all": "^4.1.5",
    "preact": "^10.5.4",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-app-polyfill": "^2.0.0",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.3",
    "yup": "^0.32.8"
  },
  "scripts": {
    "preinstall": "node scripts/configurePaymentMethods && npm run tailwind-install",
    "preupdate": "npm run tailwind-update",
    "start": "npm run app:start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "precommit": "lint-staged",
    "app:start": "react-app-rewired start",
    "prestart": "cd ../view/frontend/web/css/tailwind/ && npm run build-dev",
    "prebuild": "cd ../view/frontend/web/css/tailwind/ && npm run build-prod",
    "tailwind-install": "cd ../view/frontend/web/css/tailwind/ && npm install && cd ../../../../../reactapp/",
    "tailwind-update": "cd ../view/frontend/web/css/tailwind/ && npm update && cd ../../../../../reactapp/"
  },
  "lint-staged": {
    "src/*.{js,jsx,json,scss,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "paymentMethodsRepo": "Add your payment methods here"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "ie 11",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "ie 11",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@tailwindcss/forms": "^0.3.3",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "react-app-rewired": "^2.1.8",
    "react-dev-utils": "^11.0.4",
    "tailwindcss": "^2.2.7"
  }
}
