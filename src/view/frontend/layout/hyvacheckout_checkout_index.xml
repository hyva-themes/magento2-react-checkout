<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
<!--
    /** Uncomment the stylesheet below to load the tailwind styling in case you do not use Tailwind
      * in your Magento theme that already generates styles for this checkout.
      *
      * When using HyvÃ¤ Themes, don't generate a separate style-sheet!
      */
-->
    <css src="Hyva_Checkout::css/styles.css" defer="defer"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block
                cacheable="false"
                name="checkout.container"
                template="Hyva_Checkout::react-container.phtml"
            >
                <arguments>
                    <argument
                        name="locale_provider"
                        xsi:type="object">Hyva\Checkout\ViewModel\LocaleProvider</argument>
                    <argument
                        name="checkout_config_provider"
                        xsi:type="object">Hyva\Checkout\ViewModel\CheckoutConfigProvider</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="checkout.scripts" template="Hyva_Checkout::react-script.phtml" after="-"/>
        </referenceContainer>
    </body>
</page>
