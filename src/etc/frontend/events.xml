<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="hyva_config_generate_before">
        <observer name="hyva_react_checkout" instance="Hyva\ReactCheckout\Observer\RegisterModuleForHyvaConfig"/>
    </event>
    <event name="hyva_react_checkout_config">
        <observer name="Hyva_ReactCheckout::add_cart_info_to_checkout_config"
                  instance="Hyva\ReactCheckout\Observer\AddCartInfoInCheckoutConfig"/>
        <observer name="Hyva_ReactCheckout::add_address_fields_checkout_config"
                  instance="Hyva\ReactCheckout\Observer\AddAddressFieldsCheckoutConfig"/>
    </event>
</config>
